@model IEnumerable<E_Shopper_Entity.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Marka", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Products.Count)
    </td>
    <td>
        @Bootstrap.LinkButton("/Brand/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)

        @Bootstrap.LinkButton("/Brand/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", string.Empty)

        @Bootstrap.LinkButton("/Brand/Delete/" + item.Id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
    </td>
</tr>
}

</table>
