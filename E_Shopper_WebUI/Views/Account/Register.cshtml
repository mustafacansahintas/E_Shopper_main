@model E_Shopper_BLL.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>
    #login .container #login-row #login-column #login-box {
        margin-top: 60px;
    }

        #login .container #login-row #login-column #login-box #login-form {
            padding: 20px;
        }

            #login .container #login-row #login-column #login-box #login-form #register-link {
                margin-top: -85px;
            }

    .form-group {
        margin-bottom: 15px;
    }
</style>

<div id="login">
    <div class="container">
        <div class="col-md-9 col-md-offset-3">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-9">
                    <div id="login-box" class="col-md-12">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <h3 class="text-center text-info">KAYIT</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Ad:</label><br>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "control-label col-md-12 text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="username" class="text-info">Soyad:</label><br>
                                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "control-label col-md-12 text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="username" class="text-info">Kullanıcı Adı:</label><br>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "control-label col-md-12 text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="username" class="text-info">Email Adresi:</label><br>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "control-label col-md-12 text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="username" class="text-info">Şifre:</label><br>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "control-label col-md-12 text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="username" class="text-info">Şifre Tekrar:</label><br>
                                @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "control-label col-md-12 text-danger" })
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-warning" value="KAYIT OL">
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



